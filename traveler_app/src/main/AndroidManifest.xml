<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.guestlogix.traveler">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".application.TravelerApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/glxAppTheme"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".activities.ProfileActivity"
                android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
                android:name=".activities.FlightSearchActivity"
                android:label="Add Flight">
        </activity>
        <activity android:name=".activities.FlightActivity"
                  android:label="Flight">
        </activity>
        <activity android:name=".activities.SettingsActivity"
                  android:label="Settings">
        </activity>
        <activity android:name=".activities.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>