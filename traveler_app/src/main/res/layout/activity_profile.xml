<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.ProfileActivity"
        android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageView_profileItem_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/padding_xlarge"
                android:src="@drawable/ic_email_24dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">
            <TextView
                    android:id="@+id/textView_profileItem_title"
                    android:textSize="@dimen/text_view_xsmall"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"/>

            <TextView
                    android:id="@+id/textView_profileItem_value"
                    android:textSize="@dimen/text_view_small"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="gorlami_forever@guestlogix.com"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/layout_profileOrders"
                  android:clickable="true"
                  android:focusable="true">

        <ImageView
                android:id="@+id/imageView_profileOrders_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/padding_xlarge"
                android:src="@drawable/ic_shopping_cart_c8_24dp"
                android:clickable="false"
                android:focusable="false"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_small"
                android:clickable="false"
                android:focusable="false">
            <TextView
                    android:id="@+id/textView_orders_title"
                    android:textSize="@dimen/text_view_small"
                    style="@style/TextButton"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:clickable="false"
                    android:focusable="false"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/layout_profileSettings">

        <Button android:layout_width="match_parent" android:layout_height="50dp"
        android:layout_margin="@dimen/margin_default"
        android:text="Log out"
        android:id="@+id/button_profile_logout"/>

    </LinearLayout>


</LinearLayout>