<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

    <TextView
            android:id="@+id/textView_flightCard_departureIata"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            tools:text="HND"
            android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
            android:id="@+id/textView_catalog_planeIcon"
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="@dimen/text_margin"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/textView_flightCard_departureIata"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="âœˆ"/>

    <TextView
            android:id="@+id/textView_catalog_arrivalIata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="YYZ"
            app:layout_constraintStart_toEndOf="@+id/textView_catalog_planeIcon"
            android:textAppearance="?attr/textAppearanceListItem"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_catalog_deleteFlights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:insetLeft="0dp"
            android:insetBottom="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_close_white_24dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/lightGray"/>

</androidx.constraintlayout.widget.ConstraintLayout>
