<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/padding_xlarge"
        android:paddingRight="0dp">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
        <TextView
                android:id="@+id/textView_flightCard_departureIata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:paddingRight="@dimen/margin_xxlarge"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="HND"/>

        <TextView
                android:id="@+id/textView_catalog_planeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="âœˆ"/>

        <TextView
                android:id="@+id/textView_catalog_arrivalIata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_xxlarge"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="YYZ"/>
    </LinearLayout>


    <Button
            android:id="@+id/button_catalog_deleteFlights"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/lightGray"
            android:background="@drawable/ic_close_white_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>

</RelativeLayout>
