<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="#ffffff">

    <TextView
            android:id="@+id/departureIataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            tools:text="HND"
            android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
            android:id="@+id/planeTextView"
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="@dimen/text_margin"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/departureIataTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="âœˆ"/>

    <TextView
            android:id="@+id/arrivalIataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="YYZ"
            app:layout_constraintStart_toEndOf="@+id/planeTextView"
            android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
            android:id="@+id/deleteTextView"
            android:text="x"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
