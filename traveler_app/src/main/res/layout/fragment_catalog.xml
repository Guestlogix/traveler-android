<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/off_white"
        tools:context=".fragments.FlightSearchResultsFragment"
        tools:listitem="@layout/fragment_flight_search_results_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flightResultRecyclerView"
            android:name="com.guestlogix.traveler.activities.FlightSearchResultsFragment"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:padding="10dp"
            android:background="@color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <com.guestlogix.traveleruikit.widgets.CatalogView
            android:background="@color/white"
            android:id="@+id/catalogView"
            android:layout_marginTop="55dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/flightResultRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </com.guestlogix.traveleruikit.widgets.CatalogView>

</androidx.constraintlayout.widget.ConstraintLayout>