<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.FlightSearchResultsFragment"
        tools:listitem="@layout/fragment_flight_search_results_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/flightResultProgressBar"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flightResultRecyclerView"
            android:name="com.guestlogix.traveler.activities.FlightSearchResultsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#EFEFEF"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    />
    <LinearLayout
            android:id="@+id/emptyListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_flight_found_primary"
                android:textStyle="bold"
                android:textSize="20sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:text="@string/no_flights_found_secondary"/>

        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/try_again"
                android:layout_height="wrap_content"
                android:text="@string/try_again"
                android:textColor="@color/colorLink"
                android:padding="10dp"/>

    </LinearLayout>
</RelativeLayout>