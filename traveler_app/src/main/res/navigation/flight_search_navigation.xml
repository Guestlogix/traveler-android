<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/addFlightNavigation"
            app:startDestination="@+id/flight_search_dest">
    <fragment
            android:id="@+id/loading_destination"
            android:name="com.guestlogix.traveler.fragments.LoadingFragment"
            android:label="Loading"
            tools:layout="@layout/fragment_loading">
    </fragment>
    <fragment
            android:id="@+id/error_destination"
            android:name="com.guestlogix.traveler.fragments.RetryFragment"
            android:label="Error"
            tools:layout="@layout/fragment_error">
    </fragment>
    <fragment
            android:id="@+id/flight_search_dest"
            android:name="com.guestlogix.traveler.fragments.SearchFlightFragment"
            android:label="Search Flight"
            tools:layout="@layout/fragment_flight_search">
    </fragment>
    <fragment
            android:id="@+id/flight_search_result_dest"
            android:name="com.guestlogix.traveler.fragments.SearchFlightResultsFragment"
            android:label="Flights"
            tools:layout="@layout/item_flight_info_card">
    </fragment>
    <action
            android:id="@+id/loading_action"
            app:launchSingleTop="true"
            app:destination="@+id/loading_destination"/>
    <action
            android:id="@+id/flight_search_action"
            app:launchSingleTop="true"
            app:popUpTo="@id/flight_search_dest"
            app:popUpToInclusive="true"
            app:destination="@+id/flight_search_dest"/>
    <action
            android:id="@+id/flight_search_result_action"
            app:launchSingleTop="true"
            app:popUpTo="@id/loading_destination"
            app:popUpToInclusive="true"
            app:destination="@+id/flight_search_result_dest"/>
    <action
            android:id="@+id/error_action"
            app:launchSingleTop="true"
            app:popUpTo="@id/loading_destination"
            app:popUpToInclusive="true"
            app:destination="@+id/error_destination"/>
</navigation>
