<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="@dimen/padding_xlarge"
        tools:context=".activities.OrderConfirmationActivity">

    <TextView
            style="@style/BodyHeaderTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/subTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:text="Experience Name"
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/CallOutTextView"
            app:layout_constraintHorizontal_bias="0"
            tools:text="Dec 08, 2019 11am"
            android:id="@+id/subTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/confirmationImageView"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_done_white_48dp"
            app:layout_constraintBottom_toTopOf="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_xlarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            app:layout_constraintTop_toBottomOf="@id/subTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/messageTitleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/separator"
            style="@style/separator"/>


    <TextView
            style="@style/BodyLabelTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toTopOf="@id/messageSubTitleTextView"
            app:layout_constraintTop_toBottomOf="@id/separator"
            android:text="Thank you, your order has been processed."
            android:id="@+id/messageTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            style="@style/BodyMainTextView"
            android:text="An order confirmation has been sent to your email.  Please be sure to check your spam if not present in your inbox."
            app:layout_constraintTop_toBottomOf="@id/messageTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/messageSubTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            app:layout_constraintTop_toBottomOf="@id/messageSubTitleTextView"
            app:layout_constraintBottom_toTopOf="@+id/confirmationNumberLabelTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/separator1"
            style="@style/separator"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/separator1"
            app:layout_constraintBottom_toTopOf="@+id/confirmationNumberValueTextView"
            android:layout_width="match_parent"
            android:text="@string/confirmation_number"
            style="@style/CallOutTextView"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xxsmall"
            android:id="@+id/confirmationNumberLabelTextView"
    />

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/confirmationNumberLabelTextView"
            app:layout_constraintBottom_toTopOf="@+id/separator2"
            style="@style/BodyHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmationNumberValueTextView"
            tools:text="4-5 hours"/>

    <View
            app:layout_constraintTop_toBottomOf="@id/confirmationNumberValueTextView"
            app:layout_constraintBottom_toTopOf="@+id/emailLabelTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/separator2"
            style="@style/separator"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/separator2"
            app:layout_constraintBottom_toTopOf="@+id/emailValueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xxsmall"
            android:id="@+id/emailLabelTextView"
            style="@style/CallOutTextView"
            android:text="@string/confirmation_email"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/emailLabelTextView"
            style="@style/BodyHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailValueTextView"
            tools:text="4-5 hours"/>

    <Button
            app:layout_constraintTop_toBottomOf="@+id/emailValueTextView"
            style="@style/ActionButton"
            android:layout_marginTop="@dimen/margin_large"
            android:id="@+id/viewTicketsButton"
            android:text="@string/view_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/OutlinedButton.Accent"
            android:id="@+id/homeButton"
            android:text="@string/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>