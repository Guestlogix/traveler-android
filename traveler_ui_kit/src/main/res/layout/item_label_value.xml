<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            style="@style/BodyHeaderTextView"
            android:id="@+id/itemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/itemValue"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Duration"/>
    <TextView
            style="@style/CallOutTextView"
            android:id="@+id/itemValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemLabel"
            tools:text="4-5 hours"/>

    <ImageView
            android:id="@+id/imageView_itemLabel_delete"
            android:src="@drawable/ic_delete_white_24dp"
            android:layout_width="wrap_content"
            android:padding="@dimen/padding_xlarge"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="355dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>