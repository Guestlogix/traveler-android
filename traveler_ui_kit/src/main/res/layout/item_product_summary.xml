<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large">

    <!-- Title -->
    <TextView
            android:id="@+id/textView_orderSummaryItem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Experience Tour Name"
            style="@style/Heading.Text.Title"
            android:layout_marginBottom="@dimen/margin_xlarge"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_orderSummaryItem_subtitle"
            style="@style/Heading.Text.Subtitle"
            tools:text="Dec 08, 2019 11am"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/Separator"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_orderSummaryItem_passesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="2"/>
</LinearLayout>