<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xlarge">

    <TextView
            style="@style/glxTextViewTitleLarge"
            android:id="@+id/textView_catalog_sectionTitle"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:text="Dummy Title"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_catalog_itemContainer"
            android:layout_below="@+id/textView_catalog_sectionTitle"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/thumbnail_height"
            tools:listitem="@layout/item_view_catalog_section"
            tools:itemCount="1"/>

</RelativeLayout>