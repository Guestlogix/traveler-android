<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemDetailsProgressBar"
            android:layout_centerInParent="true"
            tools:visibility="gone"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/itemDetailsLayout">

        <androidx.core.widget.NestedScrollView
                android:id="@+id/mainNestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView android:layout_width="match_parent"
                           android:layout_height="400dp"
                           android:scaleType="centerCrop"
                           android:background="@color/lightGray"
                           android:id="@+id/imageView"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/padding_normal"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleTextView"
                            tools:text="Experience Title"
                            style="@style/TitleOneTextView"
                            android:layout_gravity="center"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/subtitleTextView"
                            tools:text="About the tour"
                            android:text="@string/label_about_the_tour"
                            style="@style/TitleTwoTextView"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/descriptionTextView"
                            style="@style/BodyMainTextView"
                            tools:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text. All the Lorem Ipsum generators on the Internet tend to repeat predefined chunks as necessary, making this the first true generator on the Internet."/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dateTextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dateEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/hint_select_date"
                                android:inputType="textCapCharacters"
                                app:errorEnabled="true"
                                android:focusable="false"
                                android:textAllCaps="true"
                                android:imeOptions="actionDone"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                            android:id="@+id/timeRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content">
                        <Spinner
                                android:id="@+id/timeSlotsSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"/>
                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/timeTextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                app:errorEnabled="true">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/timeEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_select_time"
                                    android:inputType="textCapCharacters"
                                    app:errorEnabled="true"
                                    android:focusable="false"
                                    android:textAllCaps="true"
                                    android:imeOptions="actionDone"/>

                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                    <com.google.android.material.tabs.TabLayout
                            android:id="@+id/catalogItemTabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                    </com.google.android.material.tabs.TabLayout>
                    <androidx.viewpager.widget.ViewPager
                            android:layout_width="match_parent"
                            android:layout_height="290dp"
                            android:id="@+id/catalogItemPager">

                    </androidx.viewpager.widget.ViewPager>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:padding="@dimen/padding_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/startingAtLabelTextView"
                      android:layout_height="wrap_content"
                      android:text="@string/label_starting_at"/>

            <TextView android:layout_width="wrap_content"
                      style="@style/TitleThree"
                      android:layout_below="@+id/startingAtLabelTextView"
                      android:id="@+id/startingAtValueTextView"
                      android:layout_height="wrap_content"
                      android:text="@string/label_starting_at"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                <Button android:layout_width="wrap_content"
                        style="@style/CaptionOneTextView"
                        android:text="@string/button_check_availability"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkAvailabilityButton"/>
                <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:id="@+id/checkAvailabilityProgressBar"
                        tools:visibility="visible"
                        android:visibility="gone"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>