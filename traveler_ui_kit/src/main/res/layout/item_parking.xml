<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="264dp"
        android:layout_height="156dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/off_white"
        card_view:cardCornerRadius="4dp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <View
                android:id="@+id/view_parking_selected_indicator"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimary" />

        <TextView
                android:id="@+id/textView_parking_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Parking" />

        <TextView
                android:id="@+id/textView_parking_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_parking_title"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:textSize="13sp"
                tools:text="Shuttle Transfer: 4 mins" />


        <TextView
                android:id="@+id/textView_parking_view_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:drawableEnd="@drawable/ic_right_arrow"

                android:drawableRight="@drawable/ic_right_arrow"
                android:drawablePadding="@dimen/margin_small"
                android:text="@string/view"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/textView_parking_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/total"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/textView_parking_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/textView_parking_total_label"
                android:layout_toRightOf="@id/textView_parking_total_label"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="183.40 CAD" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
