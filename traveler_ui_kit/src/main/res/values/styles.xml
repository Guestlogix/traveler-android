<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="glxAppTheme" parent="glxAppThemeDark">
<!--        this is just a place holder and should not contain any attributes-->
<!--        by default it will point to glxAppThemeLight. sdk Client can override this with same name style in their app pointing to glxAppThemeDark or even their own style-->
    </style>

    <style name="glxAppThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/glxBrand</item>
        <item name="colorPrimaryDark">@color/glxBrand</item>
        <item name="colorAccent">@color/glxAccent1</item>
        <item name="android:windowBackground">@color/glxPrimaryScreenBackgroundLight</item>


        <item name="buttonStyle">@style/glxButtonStyleLight</item>
        <item name="editTextStyle">@style/glxTextViewStyleLight</item>
        <item name="actionBarStyle">@style/ActionBarStyleLight</item>

    </style>

    <style name="glxAppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/glxBrand</item>
        <item name="colorPrimaryDark">@color/glxBrand</item>
        <item name="colorAccent">@color/glxAccent1</item>
        <item name="android:windowBackground">@color/glxPrimaryScreenBackgroundDark</item>

