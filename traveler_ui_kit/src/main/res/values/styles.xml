<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleLargeTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xxlarge</item>
    </style>

    <style name="TitleOneTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xlarge</item>
        <item name="android:layout_marginTop">@dimen/margin_xlarge</item>
    </style>

    <style name="TitleTwoTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="TitleThree" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_large</item>
    </style>

    <style name="BodyHeaderTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyLabelTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyMainTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CallOutTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SubHeadTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xsmall</item>
    </style>

    <style name="CaptionOneTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xxsmall</item>
    </style>

    <style name="separator">
        <item name="android:background">@color/separator</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="CaptionOneTextView_MarginTop" parent="CaptionOneTextView">
        <item name="android:layout_marginTop">@dimen/margin_xxlarge</item>
    </style>

    <style name="ActionButton" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">160dp</item>
    </style>

    <style name="MainBody" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Subhead" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DialogHeader">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_xlarge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogActionButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>