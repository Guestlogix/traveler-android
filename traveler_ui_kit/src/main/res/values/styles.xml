<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="TextAppearance" parent="AppTheme">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
    </style>

    <style name="Separator" parent="AppTheme">
        <item name="android:background">@color/lightGray</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTextStyle</item>
    </style>

    <style name="ActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultTextView" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleLargeTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xxlarge</item>
    </style>

    <style name="TitleOneTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xlarge</item>
        <item name="android:layout_marginTop">@dimen/margin_xlarge</item>
    </style>

    <style name="CatalogTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_large</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="TitleTwoTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_large</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TitleThree" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_large</item>
    </style>

    <style name="BodyHeaderTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyLabelTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BodyMainTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="CallOutTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeadTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xsmall</item>
    </style>

    <style name="CaptionOneTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_xxsmall</item>
    </style>

    <style name="separator">
        <item name="android:background">@color/separator</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height_stroke</item>
    </style>

    <style name="CaptionOneTextView_MarginTop" parent="CaptionOneTextView">
        <item name="android:layout_marginTop">@dimen/margin_xxlarge</item>
    </style>

    <style name="ActionButton" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_view_small</item>
        <item name="android:minWidth">160dp</item>
    </style>

    <style name="MainBody" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Subhead" parent="DefaultTextView">
        <item name="android:textSize">@dimen/text_view_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Dialog" parent="Base.Theme.MaterialComponents.Dialog">
        <item name="android:paddingTop">@dimen/padding_dialog_top</item>
    </style>

    <style name="DialogHeader">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_xlarge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogTitle">
        <item name="android:paddingLeft">@dimen/padding_xxlarge</item>
        <item name="android:paddingRight">@dimen/padding_xxlarge</item>
        <item name="android:textSize">@dimen/text_view_large</item>
        <item name="android:textColor">@color/dialogTitle</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="DialogMessage">
        <item name="android:paddingLeft">@dimen/padding_xxlarge</item>
        <item name="android:paddingRight">@dimen/padding_xxlarge</item>
        <item name="android:textSize">@dimen/text_view_small</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginBottom">@dimen/margin_xxlarge</item>
    </style>

    <style name="DialogActionLayout">
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="DialogActionButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <!-- Base button style -->
    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
    </style>

    <style name="Button.Primary">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="iconPadding">@dimen/margin_xlarge</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="iconPadding">@dimen/margin_xlarge</item>
    </style>

    <style name="Button.Accent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="iconPadding">@dimen/margin_xlarge</item>
    </style>


    <style name="Button.Warn">
        <item name="strokeColor">@color/colorWarn</item>
        <item name="backgroundTint">@color/colorWarn</item>
        <item name="android:textSize">@dimen/text_view_default</item>
        <item name="iconPadding">@dimen/margin_xlarge</item>
    </style>

    <!-- Base TextButton style -->
    <style name="TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
    </style>

    <style name="TextButton.Primary">
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextButton.Secondary">
        <item name="rippleColor">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="TextButton.Accent">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextButton.Warn">
        <item name="rippleColor">@color/colorWarn</item>
        <item name="android:textColor">@color/colorWarn</item>
    </style>

    <!-- Base OutlineButton style -->
    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">@dimen/margin_xlarge</item>
    </style>

    <style name="OutlinedButton.Primary">
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="OutlinedButton.Secondary">
        <item name="rippleColor">@color/colorSecondary</item>
        <item name="iconTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="strokeColor">@color/colorSecondary</item>
    </style>

    <style name="OutlinedButton.Accent">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="OutlinedButton.Warn">
        <item name="rippleColor">@color/colorWarn</item>
        <item name="iconTint">@color/colorWarn</item>
        <item name="android:textColor">@color/colorWarn</item>
        <item name="strokeColor">@color/colorWarn</item>
    </style>

    <!-- Heading style group -->
    <style name="Heading">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading.Text" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_view_large</item>
    </style>

    <style name="Heading.Text.Title">
        <item name="android:paddingTop">@dimen/padding_large</item>
    </style>

    <style name="Heading.Text.Subtitle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_view_default</item>
    </style>

    <style name="ListItem" parent="AppTheme">
        <!-- Meant as a grouping mechanism -->
    </style>

    <style name="ListItem.Separator" parent="Separator">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="ListItem.Text" parent="TextAppearance">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItem.Text.Title">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/text_view_default</item>
    </style>

    <style name="ListItem.Text.Subtitle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_view_small</item>
    </style>

    <style name="ListItem.Text.Value">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_view_default</item>
    </style>

    <style name="ListItem.Container">
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
    </style>

    <style name="ListItem.Large">
        <item name="android:paddingTop">@dimen/padding_xlarge</item>
        <item name="android:paddingBottom">@dimen/padding_xlarge</item>
    </style>

    <style name="ListItem.Large.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_view_large</item>
    </style>

    <style name="Container" parent="AppTheme">
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/darkGray</item>
        <item name="tabTextColor">@color/lightGray</item>
        <item name="tabRippleColor">@color/colorPrimary</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ExpandedTitle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_view_xlarge</item>
    </style>

    <!-- Base style for action bars -->
    <style name="ActionBar" parent="TextAppearance">
    </style>

    <style name="ActionBar.Subtitle">
        <item name="android:textSize">@dimen/text_view_xxsmall</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ActionBar.Title">
        <item name="android:textSize">@dimen/text_view_xlarge</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>
</resources>