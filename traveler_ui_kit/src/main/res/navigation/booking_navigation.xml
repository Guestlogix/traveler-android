<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/supplier_questions_navigation"
            xmlns:tools="http://schemas.android.com/tools"
            app:startDestination="@+id/loading_destination">

    <fragment
            android:id="@+id/loading_destination"
            android:name="com.guestlogix.traveleruikit.fragments.TravelerLoadingFragment"
            android:label="Loading"
            tools:layout="@layout/fragment_traveler_loading">
    </fragment>

    <fragment
            android:id="@+id/error_destination"
            android:name="com.guestlogix.traveleruikit.fragments.TravelerErrorFragment"
            android:label="Error"
            tools:layout="@layout/fragment_traveler_error">
    </fragment>

    <fragment
            android:id="@+id/pass_selection_destination"
            android:name="com.guestlogix.traveleruikit.fragments.PassSelectionFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_pass_selection">
        <argument android:name="booking_context" app:argType="com.guestlogix.travelercorekit.models.BookingContext"/>
    </fragment>

    <fragment
            android:id="@+id/supplier_questions_destination"
            android:name="com.guestlogix.traveleruikit.fragments.SupplierQuestionsFragment"
            android:label="Pass Selection"
            tools:layout="@layout/fragment_pass_selection">
    </fragment>


    <action
            android:id="@+id/loading_action"
            app:launchSingleTop="true"
            app:popUpTo="@id/loading_destination"
            app:popUpToInclusive="true"
            app:destination="@+id/loading_destination"/>

    <action
            android:id="@+id/error_action"
            app:launchSingleTop="true"
            app:popUpTo="@id/loading_destination"
            app:popUpToInclusive="true"
            app:destination="@+id/error_destination"/>

    <action
        android:id="@+id/pass_selection_action"
        app:launchSingleTop="true"
        app:popUpTo="@id/loading_destination"
        app:popUpToInclusive="true"
        app:destination="@+id/pass_selection_destination"/>

    <action
            android:id="@+id/supplier_questions_action"
            app:launchSingleTop="true"
            app:popUpTo="@id/loading_destination"
            app:popUpToInclusive="true"
            app:destination="@id/supplier_questions_destination"/>

</navigation>